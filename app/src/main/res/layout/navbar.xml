<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@color/white">

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navbar_home"
        android:textColor="@color/black"
        android:padding="0dp"
        android:layout_marginHorizontal="5dp"
        android:drawableTop="@drawable/home_icon"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/inventoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navbar_invenotry"
        android:textColor="@color/black"
        android:padding="0dp"
        android:layout_marginHorizontal="5dp"
        android:drawableTop="@drawable/inventory_icon"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/shoppingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navbar_shopping"
        android:textColor="@color/black"
        android:padding="0dp"
        android:layout_marginHorizontal="5dp"
        android:drawableTop="@drawable/shopping_icon"
        android:background="@android:color/transparent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navbar_profile"
        android:textColor="@color/black"
        android:padding="0dp"
        android:layout_marginHorizontal="5dp"
        android:drawableTop="@drawable/profile_icon"
        android:background="@android:color/transparent"/>
</LinearLayout>