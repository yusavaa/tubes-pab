<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatbot"
    android:background="#EDE7F6">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Weedia Bot"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:background="#7B1FA2"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- User Question -->
    <LinearLayout
        android:id="@+id/ll_user_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#CE93D8"
        android:padding="12dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_header"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_user_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What do you think I can make with the ingredients in my inventory?"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <!-- Bot Response -->
    <ScrollView
        android:id="@+id/sv_bot_response"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/ll_user_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_response_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You have some basic ingredients like:"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Ingredients -->
            <TextView
                android:id="@+id/tv_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Eggs\n- Milk\n- Cheese\n- Vegetables (onion, garlic, potatoes)\n- Bread or Rice\n- Butter\n- Meat (chicken or beef)\n- Condiments (salt, pepper, soy sauce)"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Recipe Suggestions -->
            <TextView
                android:id="@+id/tv_recipes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here are simple ideas you could try:"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Omelet\n   - Eggs, milk, veggies, cheese.\n2. Fried Rice\n   - Rice, eggs, vegetables, soy sauce.\n3. Grilled Cheese Sandwich\n   - Bread, cheese, butter.\n4. Vegetable Soup\n   - Any vegetables, water, seasoning.\n5. Garlic Butter Pasta\n   - Pasta, butter, garlic, cheese."
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <!-- Message Input -->
    <EditText
        android:id="@+id/et_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Message"
        android:background="#FFFFFF"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_send" />

    <ImageButton
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sayur"
        android:background="?attr/selectableItemBackground"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
